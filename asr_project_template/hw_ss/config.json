{
  "name": "SEX",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000
  },
  "augmentations": {
    "wave": []
  },
  "Mixer": {
    "nfiles": 150,
    "snr_levels": [-5, 5],
    "num_workers": 2,
    "update_steps": 10,
    "audioLen": 3,
    "vad_db": 20,
    "trim_db": 20
  },

  "arch": {
    "type": "SpEXPlus",
    "args": {
      "L1": 20,
      "L2": 80,
      "L3": 160,
      "speech_encoder_out_channels": 256,
      "extractor_emb_dim": 256,
      "extractor_intermed_dim": 512,
      "num_tcn_blocks_in_stack": 8,
      "num_stacked_tcn": 4,
      "num_res_net_blocks": 3,
      "spk_emb": 256,
      "num_spk": 251,
      "tcn_kernel_size": 3

    }
  },
  "data": {
    "train": {
      "batch_size": 2,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100-mixed",
            "max_audio_length": 20.0,
            "limit": 10000,
            "data_dir": "/kaggle/input/librispeech-mixed/librispeech-mixed",
            "index_path": "/kaggle/input/librispeech-mixed/librispeech-mixed"
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 2,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean-mixed",
            "data_dir": "/kaggle/input/librispeech-mixed/librispeech-mixed",
            "limit": 1000,
            "max_audio_length": 20.0,
            "index_path": "/kaggle/input/librispeech-mixed/librispeech-mixed"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3
    }
  },
  "loss": {
    "type": "SISDRLoss",
    "args": {
      "alpha": 0.1,
      "beta": 0.1,
      "gamma": 0.5
    }
  },
  "metrics": [
    {
      "type": "SISDRMetric",
      "args":{
        "name": "SI-SDR"
      }
    }
  ],

  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "factor": 0.5,
      "patience": 2
    }
  },
  "wandb_project_name": "SpEXPlus_NightRun_Tue/7th/November",
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "len_epoch": 1000,
    "grad_norm_clip": 90
  }
}
