{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000
  },
  "augmentations": {
    "wave": []
  },
  "Mixer": {
    "nfiles": 150,
    "snr_levels": [-5, 5],
    "num_workers": 2,
    "update_steps": 10,
    "audioLen": 3,
    "vad_db": 20,
    "trim_db": 20
  },

  "arch": {
    "type": "SpEXPlus",
    "args": {
      "L1": 20,
      "L2": 80,
      "L3": 160,
      "speech_encoder_out_channels": 30,
      "extractor_emb_dim": 20,
      "extractor_intermed_dim": 10,
      "num_tcn_blocks_in_stack": 2,
      "num_stacked_tcn": 2,
      "num_res_net_blocks": 2,
      "spk_emb": 100,
      "num_spk": 100,
      "tcn_kernel_size": 3

    }
  },
  "data": {
    "train": {
      "batch_size": 3,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "limit": 3,
            "index_path": "/Users/bayesian_monster/speech_separation/asr_project_template/data/datasets/librispeech"
          }
        }
      ]
    },
    "val": {
      "batch_size": 3,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "limit": 3,
            "index_path": "/Users/bayesian_monster/speech_separation/asr_project_template/data/datasets/librispeech"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3
    }
  },
  "loss": {
    "type": "SISDRLoss",
    "args": {
      "alpha": 0.1,
      "beta": 0.1,
      "gamma": 0.5
    }
  },
  "metrics": [
    {
      "type": "SISDRMetric",
      "args":{
        "name": "SI-SDR"
      }
    }
  ],

  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "factor": 0.5,
      "patience": 2
    }
  },
  "wandb_project_name": "SpEXPlus_one_batch",
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "len_epoch": 10,
    "grad_norm_clip": 100
  }
}
